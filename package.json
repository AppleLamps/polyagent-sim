{
  "name": "polyagent-sim",
  "version": "1.0.0",
  "description": "Polymarket Value-Betting AI Simulator",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev:backend\" \"npm run dev:frontend\"",
